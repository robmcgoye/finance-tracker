<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <% if !@friends.empty? %>
    <div class="card card-header results-block">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.email %></td>
              <td><%= friend.full_name %></td>
              <td>
                <%= link_to "View Profile", user_path(friend), class: 'btn btn-sm btn-success' %>
                <% if current_user.not_friends_with?(friend.id) %>
                  <%= link_to 'Follow friend?', friendships_path(friend: friend), 
                      method: :post, 
                      class: 'btn btn-sm btn-success' %>
                <% else %>
                  <span class="badge bg-secondary">You are friends</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>